{% load cotton %}

<!-- Compact Statistics Cards -->
<div class="grid grid-cols-4 gap-4 mb-6">
  <c-dashboard-card>
    <div class="flex items-center gap-3">
      <svg class="w-6 h-6 text-blue-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4"></path>
      </svg>
      <div>
        <p class="text-xs text-gray-500 dark:text-gray-400">Total Replications</p>
        <p class="text-xl font-bold text-gray-900 dark:text-white">{{ total_replications|default:0 }}</p>
      </div>
    </div>
  </c-dashboard-card>

  <c-dashboard-card>
    <div class="flex items-center gap-3">
      <svg class="w-6 h-6 text-green-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      <div>
        <p class="text-xs text-gray-500 dark:text-gray-400">Active</p>
        <p class="text-xl font-bold text-gray-900 dark:text-white">{{ active_count|default:0 }}</p>
      </div>
    </div>
  </c-dashboard-card>

  <c-dashboard-card>
    <div class="flex items-center gap-3">
      <svg class="w-6 h-6 text-purple-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M3 14h18m-9-4v8m-7 0h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
      </svg>
      <div>
        <p class="text-xs text-gray-500 dark:text-gray-400">Tables Synced</p>
        <p class="text-xl font-bold text-gray-900 dark:text-white">{{ total_tables|default:0 }}</p>
      </div>
    </div>
  </c-dashboard-card>

  <c-dashboard-card>
    <div class="flex items-center gap-3">
      <svg class="w-6 h-6 text-yellow-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
      </svg>
      <div>
        <p class="text-xs text-gray-500 dark:text-gray-400">Status</p>
        <p class="text-base font-semibold">
          {% if has_errors %}
            <span class="text-red-600 dark:text-red-400">Issues</span>
          {% else %}
            <span class="text-green-600 dark:text-green-400">Healthy</span>
          {% endif %}
        </p>
      </div>
    </div>
  </c-dashboard-card>
</div>

{% if replication_rows %}
  <!-- Replications Table -->
  <c-dashboard-card>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
        <thead class="bg-gray-50 dark:bg-gray-900">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
              Client
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
              Database
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
              Status
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
              Connector
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
              Tables
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
              Last Sync
            </th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
              Actions
            </th>
          </tr>
        </thead>
        <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
          {% for row in replication_rows %}
          <tr class="hover:bg-gray-50 dark:hover:bg-gray-700 transition">
            <td class="px-6 py-4 whitespace-nowrap">
              <a href="{% url 'client_detail' row.client_id %}"
                 class="text-sm font-medium text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300">
                {{ row.client_name }}
              </a>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="flex items-center gap-2">
                <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7"></path>
                </svg>
                <div>
                  <div class="text-sm font-medium text-gray-900 dark:text-white">{{ row.database_name }}</div>
                  <div class="text-xs text-gray-500 dark:text-gray-400">{{ row.database_type }}</div>
                </div>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                {% if row.status == 'active' %}
                  bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-400
                {% elif row.status == 'paused' %}
                  bg-yellow-100 text-yellow-800 dark:bg-yellow-900/30 dark:text-yellow-400
                {% elif row.status == 'error' %}
                  bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-400
                {% elif row.status == 'configured' %}
                  bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-400
                {% else %}
                  bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-400
                {% endif %}">
                {% if row.status == 'active' %}üü¢{% elif row.status == 'paused' %}‚è∏Ô∏è{% elif row.status == 'error' %}‚ùå{% elif row.status == 'configured' %}‚öôÔ∏è{% else %}üî¥{% endif %}
                {{ row.status_display }}
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="text-xs font-mono text-gray-600 dark:text-gray-400">{{ row.connector_name }}</span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="text-sm text-gray-900 dark:text-white">{{ row.tables_count }}</span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="text-xs text-gray-500 dark:text-gray-400">
                {{ row.last_sync|date:"M d, g:i A"|default:"Never" }}
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
              <div class="flex items-center justify-end gap-2">
                <a href="{% url 'cdc_monitor_connector' row.id %}"
                   class="inline-flex items-center gap-1 px-2 py-1 text-xs bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 text-blue-700 dark:text-blue-400 rounded hover:bg-blue-100 dark:hover:bg-blue-900/30 transition">
                  <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                  </svg>
                  Monitor
                </a>

                {% if row.status == 'active' %}
                  <button onclick="alert('Pause functionality coming soon!')"
                     class="inline-flex items-center gap-1 px-2 py-1 text-xs bg-yellow-50 dark:bg-yellow-900/20 border border-yellow-200 dark:border-yellow-800 text-yellow-700 dark:text-yellow-400 rounded hover:bg-yellow-100 dark:hover:bg-yellow-900/30 transition">
                    ‚è∏Ô∏è Pause
                  </button>
                {% elif row.status == 'paused' %}
                  <button onclick="alert('Resume functionality coming soon!')"
                     class="inline-flex items-center gap-1 px-2 py-1 text-xs bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 text-green-700 dark:text-green-400 rounded hover:bg-green-100 dark:hover:bg-green-900/30 transition">
                    ‚ñ∂Ô∏è Resume
                  </button>
                {% endif %}
              </div>
            </td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </c-dashboard-card>
{% else %}
  <!-- Empty State -->
  <c-dashboard-card>
    <div class="text-center py-12">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"></path>
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-white">No replications configured yet</h3>
      <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
        Set up CDC replication from the Clients tab.
      </p>
      <div class="mt-6">
        <button
          @click="activeTab = 'clients'"
          class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700">
          Go to Clients
        </button>
      </div>
    </div>
  </c-dashboard-card>
{% endif %}